<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.iotek.dao.AttendanceDao">
    <insert id="saveAttendance">
        insert into  T_ATTENDANCE values (ATT_SEQ.nextval,#{a_shang,jdbcType=TIMESTAMP},#{a_xia,jdbcType=TIMESTAMP}ï¼Œ#{a_eid}
        ,#{a_now,jdbcType=DATE})
    </insert>
    <update id="updateAttendance">
        update  T_ATTENDANCE
        <set>
            <if test="a_shang!=null">
                a_shang=#{a_shang},
            </if>
            <if test="a_xia!=null">
                a_xia=#{a_xia},
            </if>
            <if test="a_eid!=null">
                a_eid=#{a_eid},
            </if>
            <if test="a_now!=null">
                a_now=#{a_now}
            </if>
        </set>
        <where>
            a_id=#{a_id}
        </where>
    </update>
    <select id="getAttendance" resultType="com.iotek.model.Attendance">
        select  * from T_ATTENDANCE where a_now=#{a_now} and a_eid=#{a_eid}
    </select>
</mapper>